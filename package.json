{
  "name": "secenv",
  "version": "1.0.0",
  "description": "The Breeze: Secret management without the overhead",
  "type": "module",
  "bin": {
    "secenv": "./bin/secenv"
  },
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "exports": {
    ".": {
      "import": "./lib/index.js",
      "require": "./lib/index.cjs",
      "types": "./lib/index.d.ts"
    }
  },
  "scripts": {
    "build": "npm run build:lib && npm run build:bin",
    "build:lib": "tsup src/index.ts --format esm,cjs --dts --out-dir lib",
    "build:bin": "esbuild src/cli.ts --platform=node --bundle --outfile=./bin/secenv --format=esm --minify --external:age-encryption",
    "dev": "tsc --watch",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "secrets",
    "encryption",
    "environment",
    "age",
    "dotenv",
    "安全管理"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "age-encryption": "^0.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "esbuild": "^0.19.0",
    "tsup": "^8.5.1",
    "typescript": "^5.3.0"
  }
}
